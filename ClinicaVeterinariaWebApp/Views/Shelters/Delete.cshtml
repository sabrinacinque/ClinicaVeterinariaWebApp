@model ClinicaVeterinariaWebApp.Models.Shelter

@{
    ViewData["Title"] = "Delete";
}

<h1>Cancella</h1>

<h3>Sei sicuro di voler eliminare questo ospite?</h3>
<div>
    <h4>Ospite</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            Colore del mantello
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoatColor)
        </dd>
        <dt class="col-sm-2">
            Data di nascita
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            Microchip
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Microchip)
        </dd>
        <dt class="col-sm-2">
            Data di ammissione
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdmissionDate)
        </dd>
        <dt class="col-sm-2">
            Foto
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.PhotoUrl" alt="Foto dell'ospite" style="width:200px;height:auto;" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancella" class="btn btn-danger" /> |
        <a asp-action="Index">Ritorna alla lista</a>
    </form>
</div>
