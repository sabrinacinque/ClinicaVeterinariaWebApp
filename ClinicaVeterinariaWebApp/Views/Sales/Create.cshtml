@model ClinicaVeterinariaWebApp.Models.Sale

@{
    ViewData["Title"] = "Create Sale";
}

<h1>Create Sale</h1>

<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="CustomerFiscalCode" class="control-label"></label>
                <input asp-for="CustomerFiscalCode" class="form-control" />
                <span asp-validation-for="CustomerFiscalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input type="text" id="productName" class="form-control" placeholder="Search for product..." />
                <button type="button" id="searchButton" class="btn btn-primary">Search</button>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products" id="productSelect"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrescriptionNumber" class="control-label"></label>
                <input asp-for="PrescriptionNumber" class="form-control" />
                <span asp-validation-for="PrescriptionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleDate" class="control-label"></label>
                <input asp-for="SaleDate" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="SaleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.getElementById('searchButton').addEventListener('click', function () {
            var productName = document.getElementById('productName').value;
            fetch(`/Sales/Search?productName=${productName}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        var productSelect = document.getElementById('productSelect');
                        productSelect.innerHTML = '';
                        data.data.forEach(item => {
                            var option = document.createElement('option');
                            option.value = item.id;
                            option.text = `${item.name} - Drawer: ${item.drawerNumber}, Cabinet: ${item.cabinetCode}`;
                            productSelect.appendChild(option);
                        });
                    } else {
                        alert(data.message);
                    }
                });
        });
    </script>
}
