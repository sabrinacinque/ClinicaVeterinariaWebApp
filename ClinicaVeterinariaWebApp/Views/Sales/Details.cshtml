@model ClinicaVeterinariaWebApp.Models.Sale

@{
    ViewData["Title"] = "Details";
}

<h1>Dettagli</h1>

<div>
    <h4>Vendita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Codice Fiscale Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerFiscalCode)
        </dd>
        <dt class="col-sm-2">
            Prodotto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            Numero Ricetta
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrescriptionNumber)
        </dd>
        <dt class="col-sm-2">
            Data Vendita
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Modifica</a> |
    <a asp-action="Index">Ritorna alla lista</a>
</div>
