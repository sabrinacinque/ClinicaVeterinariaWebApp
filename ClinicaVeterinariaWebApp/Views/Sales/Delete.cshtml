@model ClinicaVeterinariaWebApp.Models.Sale

@{
    ViewData["Title"] = "Delete";
}

<h1>Cancella</h1>

<h3>Sei sicuro di voler cancellare questa vendita?</h3>
<div>
    <h4>Vendita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Codice Fiscale Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerFiscalCode)
        </dd>
        <dt class="col-sm-2">
            Prodotto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Id)
        </dd>
        <dt class="col-sm-2">
            Numero Ricetta
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrescriptionNumber)
        </dd>
        <dt class="col-sm-2">
            Data Vendita
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaleDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancella" class="btn btn-danger" /> |
        <a asp-action="Index">Ritorna alla lista</a>
    </form>
</div>
