@model ClinicaVeterinariaWebApp.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Cancella prodotto</h1>

<h4>Sei sicuro di voler cancellare questo prodotto?</h4>
<hr />
<div>
    <h4>Prodotto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Tipo di Prodotto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductType)
        </dd>
        <dt class="col-sm-2">
            Usi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uses)
        </dd>
        <dt class="col-sm-2">
            Fornitore
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.Name)
        </dd>
        <dt class="col-sm-2">
            Numero Cassetto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Drawer.Number)
        </dd>
        <dt class="col-sm-2">
            Codice Armadietto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Drawer.Cabinet.Code)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancella" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Ritorna alla lista</a>
    </form>
</div>