@model IEnumerable<ClinicaVeterinariaWebApp.Models.Visit>

@{
    ViewData["Title"] = "Visit History";
}

<h1>Visit History</h1>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VisitDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ObjectiveExam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrescribedTreatment)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VisitDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObjectiveExam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrescribedTreatment)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Details" asp-controller="Animals" asp-route-id="@ViewBag.AnimalId" class="btn btn-secondary">Back to Animal Details</a>
</div>
