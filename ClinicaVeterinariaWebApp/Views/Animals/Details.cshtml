@model ClinicaVeterinariaWebApp.Models.Animal

@{
    ViewData["Title"] = "Dettagli";
}

<h1>Dettagli</h1>

<div>
    <h4>Animale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            Colore del Mantello
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoatColor)
        </dd>
        <dt class="col-sm-2">
            Data di Nascita
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            Microchip
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Microchip)
        </dd>
        <dt class="col-sm-2">
            Data di Registrazione
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Modifica</a> |
    <a asp-action="Index">Ritorna alla lista</a> |
    <a asp-action="VisitHistory" asp-route-id="@Model.Id" class="btn btn-primary">Storico Visite</a>
</div>
