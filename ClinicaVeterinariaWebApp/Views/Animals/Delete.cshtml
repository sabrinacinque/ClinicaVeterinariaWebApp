@model ClinicaVeterinariaWebApp.Models.Animal

@{
    ViewData["Title"] = "Delete";
}

<h1>Sei sicuro di voler cancellare?</h1>
<div>
    <h4>Animale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data di Registrazione
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            Colore del Mantello
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoatColor)
        </dd>
        <dt class="col-sm-2">
            Data di Nascita
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            Microchip
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Microchip)
        </dd>
        <dt class="col-sm-2">
            Nome del Proprietario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OwnerFirstName)
        </dd>
        <dt class="col-sm-2">
            Cognome del Proprietario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OwnerLastName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancella" class="btn btn-danger" /> |
        <a asp-action="Index">Ritorna alla lista</a>
    </form>
</div>
